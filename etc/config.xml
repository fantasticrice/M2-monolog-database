<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <crontab>
            <default>
                <jobs>
                    <lfi_monolog_database_clean>
                        <schedule>
                            <cron_expr>0 1 1 * *</cron_expr>
                        </schedule>
                    </lfi_monolog_database_clean>
                </jobs>
            </default>
        </crontab>
        <system>
            <monolog_database>
                <lifetime>365</lifetime>
            </monolog_database>
        </system>
    </default>
</config>
